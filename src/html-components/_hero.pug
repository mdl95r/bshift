- let i = 1
section(block="hero")
	.swiper-container
		.swiper-wrapper
			while (i <= 4)
				.swiper-slide
					div(elem="item")
						img.lazy(data-src=`img/hero/2021-${i}.jpg`, alt="Black Mesa: Blue Shift" elem="img")
				- i++
		.swiper-pagination
		.swiper-button-prev(elem="button-arrow")
		.swiper-button-next(elem="button-arrow")