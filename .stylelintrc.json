{
	"plugins": [
        "stylelint-scss",
		"stylelint-order"
	],
	"rules": {
		"order/order": [
			"custom-properties",
			"declarations"
		],
		"order/properties-order": [
			"display",
			"flex",
			"justify-content",
			"align-items",
			"flex-direction",
			"visibility",
            "position",
            "top",
            "right",
            "bottom",
            "left",
			"z-index",
			"transform",
			"content",
			"width",
			"min-width",
			"max-width",
			"height",
			"min-height",
			"max-height",
			"font",
            "font-family",
			"color",
			"font-size",
			"font-weight",
			"letter-spacing",
			"text-align",
			"text-transform",
			"line-height",
			"text-decoration",
			"vertical-align",
			"padding",
			"padding-top",
			"padding-right",
			"padding-bottom",
			"padding-left",
			"margin",
			"margin-top",
			"margin-right",
			"margin-bottom",
			"margin-left",
			"overflow",
			"overflow-x",
			"overflow-y",
			"border",
			"border-top",
			"border-right",
			"border-bottom",
			"border-left",
			"border-radius",
			"background",
			"background-color",
			"box-shadow",
			"opacity",
			"outline",
			"transition"
		]
	}
}